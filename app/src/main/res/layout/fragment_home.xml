<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.trainings.HomeFragment">


        <TextView
            android:id="@+id/trainingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:gravity="center"
            android:text="@string/whats_train_today" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/armImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Arms"
                android:src="@drawable/arms"
                android:background="@null"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

            <ImageButton
                android:id="@+id/legsImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:contentDescription="Legs"
                android:src="@drawable/legs"
                android:background="@null"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />


            <ImageButton
                android:id="@+id/bellyImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:contentDescription="Belly"
                android:src="@drawable/belly"
                android:background="@null"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

            <ImageButton
                android:id="@+id/cardioImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:contentDescription="Cardio"
                android:src="@drawable/cardio"
                android:background="@null"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />


        </LinearLayout>

</LinearLayout>